{
    "name": "PKC",
    "version": "0.1.0",
    "description": "Public Key Chain",
    "permissions": [
        "webRequest",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "assets/ext-icon.png",
            "24": "assets/ext-icon.png",
            "32": "assets/ext-icon.png"
        },
        "default_title": "PKC",
        "default_popup": "popup.html"
    },
    "manifest_version": 3
}